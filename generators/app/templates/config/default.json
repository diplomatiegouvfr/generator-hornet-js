{
  "contextPath": "<%= _.slugify(appname) %>",
  "welcomePage": "/accueil",
  "server": {
    "route": "js1",
    "port": 8888,
    "portMonitor": 9999,
    "keepAlive": true,
    "keepAliveTimeout": 15000,
    "maxConnections": 100,
    "timeout": 300000,
    "uploadFileSize": 1000000,
    "sessionTimeout": 1800000,
    "stackTraceLimit": 100
  },
  "cookie": {
    //"domain": null,
    //"path": null,
    "httpOnly": true,
    "secure": false
    //"alwaysSetCookie": false
  },
  "themeHost": "<%= themeHost %>",
  "themeUrl": "<%= themeUrlVariabilise %>",
  "security": {
    "enabled": false,
    "hpp": true,
    "ienoopen": true,
    "noSniff": true,
    "csp": {
      "enabled": true,
      "defaultSrc": [
        "'self'",
        "'unsafe-inline'",
        "'unsafe-eval'",
        "${themeHost}"
      ],
      "scriptSrc": [
        "'self'",
        "'unsafe-inline'",
        "'unsafe-eval'",
        "${themeHost}"
      ],
      "styleSrc":[
        "'self'",
        "'unsafe-inline'",
        "${themeHost}"
      ],
      "fontSrc":[
        "'self'",
        "${themeHost}"
      ],
      "imgSrc":[
        "'self'",
        "${themeHost}"
      ],
      "reportOnly": false,
      "setAllHeaders": true,
      "disableAndroid": false
    },
    "frameguard": {
      "enabled": true,
      "mode": "deny",
      "allowFromPattern": ""
    },
    "xss": {
      "enabled": true,
      "setOnOldIE": true
    },
    "hpkp": {
      "enabled": true,
      "maxAge": 7776000000,
      "sha256s": [
        "AbCdEf123=",
        "ZyXwVu456="
      ],
      "includeSubdomains": true,
      "reportUri": null,
      "reportOnly": false
    },
    "hsts": {
      "enabled": false,
      "maxAge": 10886400000,
      "includeSubDomains": true,
      "preload": false
    },
    "csrf": {
      "enabled": true
    }
  },
  "logClient": {
    "remote": false,
    "level": "TRACE",
    "appenders": [
      {
        "type": "BrowserConsole",
        //        "layout": {
        //          "type": "pattern",
        //          "pattern": "%p|%c|%m%"
        //        },
        "layout": {
          "type": "THIN"
        }
      },
      {
        "type": "Ajax",
        "layout": {
          "type": "BASIC"
        },
        "threshold": 100,
        "timeout": 3000,
        "url": "/log"
      }
    ]
  },
  "defaultServices": {
    "host": "<%= servicesurl %>",
    "name": "<%= _.slugify(appname) %>"
  },
  "mock": {
    "enabled": false,
    "routes": "/mock/routes",
    "defaultServices": { // service mock par defaut : le contexte est toujours "<%= _.slugify(appname) %>/hornet-mock"
      "host": "http://localhost:${server.port}/" //default localhost:8888
    },
    "secteursServices": { // configuration multi-service : exemple de definition d'un mock specifique pour les secteurs
      "host": "<%= servicesurl %>:${server.port}/",
      "name": "<%= _.slugify(appname) %>/hornet-mock"
    }
  },
  "fullSpa": {
    "enabled": <%= mode %>,
    "host": "",
    "name": "/services",
    "staticPath": ""
  },
  "authentication": {
    "loginUrl": "/login",
    "logoutUrl": "/logout"
  },
  "cache": {
    "enabled": true,
    "timetolive": 60
  }
}